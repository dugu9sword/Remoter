<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    tools:context=".LinkActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/linkbg" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/exit"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="EXIT"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/port"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_connect"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24dp"
            android:layout_toRightOf="@+id/TextView01"
            android:ems="10"
            android:paddingRight="5dp"
            android:text="12345"
            android:textSize="30sp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/port"
            android:layout_alignLeft="@+id/port"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:text="10.102.53.168"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ip"
            android:layout_alignBottom="@+id/ip"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/ip"
            android:text=" IP:"
            android:textColor="#890000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/port"
            android:layout_alignBottom="@+id/port"
            android:layout_alignParentLeft="true"
            android:text=" PORT:"
            android:textColor="#890000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_exit"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/help"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="HELP"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_help"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="17dp"
            android:background="@drawable/link"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="LINK"
            android:textColor="#ffffff"
            android:textSize="30sp" />

    </RelativeLayout>

</RelativeLayout>